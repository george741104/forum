<div class="container">
  <table class="table table-responsive table-hover">
      <tr>
        <th>Topic</th>
        <th colspan="3">Operation</th>
      </tr>
    <%@posts.each do |p|%>
      <tr>
        <td>
          <%= p.topic %>
        </td>
        <td>
          <%=link_to "Info", post_path(p),:class=>'btn btn-primary'%>
        </td>
        <td>
          <%=link_to "Edit", edit_post_path(p) ,:class=>'btn btn-primary'%>
        </td>
        <td>
          <%=link_to "Delete", post_path(p) ,:class=>'btn btn-primary',:method => :delete %>
        </td>
      </tr>
    <%end%>
  </table>
  <%= paginate @posts %>
  <%= link_to "Add Post", :controller => 'posts', :action =>'new',:class=>'btn btn-primary'%>
  </div>
